@model ClassLibraryDiploma.RobotnicEquipmentWorkimgViwe
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<style>


    input {
        width: 300px;
        height: 40px;
        text-align: center;
        margin-top: 20px
    }



    #button {
        margin-top: 20px;
        margin-bottom: 40px;
        width: 150px;
        height: 40px;
        background-color: #5d1aed;
        color: white;
        border-radius: 20px;
        font-size: 16px;
    }

        #button:active {
            background: #1b0087;
            border-radius: 20px;
            border: none;
            outline: none;
            font-size: 14px;
        }

    input {
        width: 300px;
        height: 40px;
        text-align: center;
        margin-top: 20px;
    }

    body {
        margin: 0;
        font-family: arial;
        background: url(../../Content/Images/Stanok.jpg) no-repeat center center fixed;
        background-size: 100%;
        min-height: 100%;
        display: grid;
        grid-template-rows: 1fr auto;
        background-size: cover;
    }

    header {
        background-color: #000;
        width: 100%;
        height: 120px;
        text-align: center;
        padding-top: 20px;
        margin: 0px;
    }

    footer {
        background-color: black;
        width: 100%;
        height: 50px;
        margin-top: 265px;
        color: white;
        text-align: center;
        padding-top: 30px;
        font-size: 18px;
        position: absolute;
        bottom: 0;
        left: 0;
    }



    .Pozi {
        margin-left: 3%;
    }

    a {
        font-family: Arial;
        text-decoration: none;
        color: white;
        padding: 10px;
    }

        a:hover {
            background-color: beige;
            border-radius: 20px;
            color: firebrick;
        }
</style>
<body>
    <header style="align-content:center; text-align:center;">
        <div style="padding:0px; text-align:center; margin-left:5%">
            <img src="~/Content/Images/SlonikLogo.jpg" style="width: 4%; margin:
             0px; float: left; border-radius: 50px; margin-top: -0.5%">
            <p style="color: white; float: left; font-family: arial; font-size:
            30px;margin: 0; margin-left: 0.5%; ">Slonik working</p>
        </div>

        <div style="display:inline-block; padding:0; margin-left:0%; margin-top:0.7%">
            
            <a href="~/Home/Exit">Выход</a>
        </div>
    </header>
   
    <div style="        background-color: #ccc8c8;
        border: solid;
        border-color: black;
        padding: 3%;
        margin: 3%;
        border-radius: 25px;
        box-shadow: 0px 0px 5px 1px black;">

        @if (Model.working != null)
        {

            <h2>@Model.robotnik.Name</h2>

            <form asp-action="AddReports" asp-controller="Repost" method="post">
                <input type="hidden" asp-for="@Model.robotnik.Id" class="form-control" />

                <div class="form-group">
                    <label asp-for="@Model.robotnik.Name" class="control-label">Табельный номер</label>
                    @*<input readonly="readonly" type="text" asp-for="@Model.robotnik.Name" class="form-control" />*@
                </div>
                <div class="form-group">
                    <h2>@Model.robotnik.NameHuman</h2>
                    <label asp-for="@Model.robotnik.NameHuman" class="control-label">Имя</label>

                </div>
                <hr />
                <div class="form-group">
                    <label asp-for="@Model.robotnik.Rozryad" class="control-label">Розряд</label>
                    <input readonly="readonly" type="text" asp-for="@Model.robotnik.Rozryad" class="form-control" />
                </div>
                <hr />
                <div class="form-group">
                    <label asp-for="@Model.robotnik.Brigade" class="control-label">Бригада</label>
                    <input readonly="readonly" type="text" asp-for="@Model.robotnik.Brigade" class="form-control" />
                </div>
                <hr />
                <div class="form-group">
                    <label asp-for="@Model.equipment.Name" class="control-label">Оборудование</label>
                    <input readonly="readonly" type="text" asp-for="@Model.equipment.Name" class="form-control" />
                </div>
                <hr />
                <div class="form-group">
                    <label asp-for="@Model.equipment.INN" class="control-label">INN</label>
                    <input readonly="readonly" type="text" asp-for="@Model.equipment.INN" class="form-control" />
                </div>

                <hr />
                <div class="form-group">
                    <label asp-for="@Model.working.Name" class="control-label">Задние </label>
                    <input readonly="readonly" type="text" asp-for="@Model.working.Name" class="form-control" />
                    <hr />
                    <label asp-for="@Model.working.NumZakaz" class="control-label">Номер заказа </label>

                    <input readonly="readonly" type="text" asp-for="@Model.working.NumZakaz" class="form-control" />
                    <hr />
                    <div class="form-group">
                        <label asp-for="@Model.working.Saiz" class="control-label">Количество  </label>
                        <input type="text" asp-for="@Model.working.Saiz" class="form-control" />

                        <label asp-for="@Model.working.Notice" class="control-label">Заметки</label>
                        <input type="text" asp-for="@Model.working.Notice" class="form-control" />
                        <hr />
                        <hr />
                        <label asp-for="@Model.working.LeadTime" class="control-label">Потраченое время на изготовление</label>
                        <input type="text" asp-for="@Model.working.LeadTime" class="form-control" />
                        <hr />

                    </div>
                    <div class="form-group">
                        <input type="submit" value="Отправить отчёт" />
                    </div>

            </form>
            <a href="@Model.working.Path" data-fancybox="images" style="margin:0; padding:0"><img style="width:30%" ; src="@Model.working.Path" /></a>
        }
        else
        {
            <h1>Заданий нет</h1>
        }



        </div>
  
           
</body>
